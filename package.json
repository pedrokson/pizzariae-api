{
  "name": "pizzaria-jeronimu",
  "short_name": "PizzariaJeronimu",
  "version": "2.0.0",
  "description": "Sistema completo de pizzaria com frontend e backend separados",
  "main": "backend/app.js",
  "scripts": {
    "start": "cd backend && node app.js",
    "dev": "cd backend && npm run dev",
    "seed": "cd backend && npm run seed",
    "build": "echo 'Backend é uma API, frontend é estático'",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "test-api": "node test-api.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["pizzaria", "nodejs", "mongodb", "fullstack", "api", "frontend"],
  "author": "Pedro",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend"
  ]
}
